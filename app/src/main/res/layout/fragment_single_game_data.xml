<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <RelativeLayout
        android:id="@+id/spinner_teams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_radius_5"
        android:clickable="true"
        android:spinnerMode="dropdown">
        <TextView
            android:id="@+id/titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.1pt"
            android:layout_marginLeft="80.235pt"
            android:layout_marginTop="8.685pt"
            android:gravity="center"
            android:text="menu"
            android:textSize="7.515pt"
            android:textColor="@color/colorCustomTitle"
            />
        <ImageView
            android:id="@+id/indicator"
            android:layout_toRightOf="@+id/titles"
            android:layout_width="5.265pt"
            android:layout_height="3.285pt"
            android:layout_marginBottom="9pt"
            android:layout_marginLeft="11.385pt"
            android:layout_marginTop="11.565pt"
            android:background="@mipmap/drop_down_arrow"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
</LinearLayout>
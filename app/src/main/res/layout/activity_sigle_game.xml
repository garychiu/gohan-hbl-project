<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/game_item_list"
        android:layout_width="match_parent"
        android:layout_height="63.45pt"
        android:background="@color/colorCustomTitle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70pt"
            android:layout_marginTop="7.335pt"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="6.3pt" />
        </LinearLayout>

        <com.asana.hbl.views.CircularImageView
            android:id="@+id/image_home"
            android:layout_width="26.55pt"
            android:layout_height="26.55pt"
            android:layout_marginLeft="13.635pt"
            android:layout_marginTop="20.835pt" />

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="12.285pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43.2pt"
            android:layout_marginTop="38.835pt"
            android:gravity="center"
            android:textSize="8.235pt" />

        <LinearLayout
            android:layout_width="16.335pt"
            android:layout_height="15.3pt"
            android:layout_marginLeft="85.185pt"
            android:layout_marginTop="34.335pt"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="5.4pt" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="5.4pt" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_guest"
            android:layout_width="12.285pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="131.535pt"
            android:layout_marginTop="38.385pt"
            android:gravity="center"
            android:textSize="8.235pt" />

        <com.asana.hbl.views.CircularImageView
            android:id="@+id/image_guest"
            android:layout_width="26.55pt"
            android:layout_height="26.55pt"
            android:layout_marginLeft="147.915pt"
            android:layout_marginTop="20.835pt" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/simpleTabLayout"
        android:layout_width="match_parent"
        android:layout_height="29.835pt"
        android:background="@android:color/white"
        app:tabIndicatorColor="@color/colorCustomTabTextSelected"
        app:tabIndicatorHeight="2.385pt"
        app:tabMinWidth="65.55pt"
        app:tabGravity="center"
        app:tabMode="fixed"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>